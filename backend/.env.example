# MongoDB connection string. Replace <username>, <password>, and <database> with your credentials.
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.abcde.mongodb.net/<database>?retryWrites=true&w=majority

# Port for the Express/Node server (used during local development only)
PORT=5000 

# ------------------------------------
# SECURITY & AUTHENTICATION
# ------------------------------------

# Secret key used to sign JSON Web Tokens (JWTs). Generate a long, random string.
JWT_SECRET=your_super_secure_256_bit_random_secret_key

# Default credentials for creating the initial admin user.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong_admin_password_123

# ------------------------------------
# TWILIO & WHATSAPP INTEGRATION
# ------------------------------------

# Your Twilio Account SID (found in your Twilio Console)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio Auth Token (found in your Twilio Console)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

TWILIO_TEMPLATE_SID=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

CANTEEN_MANAGER_WHATSAPP=whatsapp:+919876543210

# Name of the Canteen for display in messages and app
CANTEEN_NAME="EXAMPLE"


